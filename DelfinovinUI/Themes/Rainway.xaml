<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="mainGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0F2632" Offset="0.0" />
        <GradientStop Color="#040912" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="infoBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A1620" Offset="0.0" />
        <GradientStop Color="#050B16" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="sideBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0E1E29" Offset="0.0" />
        <GradientStop Color="#091720" Offset="1.0" />
    </LinearGradientBrush>

    <Brush x:Key="buttonColor">#301934</Brush>
</ResourceDictionary>