<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="mainGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF078D75" Offset="0.0" />
        <GradientStop Color="#FF078D75" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="infoBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF0FF1C8" Offset="0.0" />
        <GradientStop Color="#FF00B997" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="sideBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF20A87B" Offset="0.0" />
        <GradientStop Color="#FF20A87B" Offset="1.0" />
    </LinearGradientBrush>

    <Brush x:Key="buttonColor">#203A43</Brush>
    <Brush x:Key="buttonTextColor">White</Brush>
    <Brush x:Key="textColor">Black</Brush>
</ResourceDictionary>