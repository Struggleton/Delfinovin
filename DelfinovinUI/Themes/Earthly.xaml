<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="mainGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#DBD5A4" Offset="0.0" />
        <GradientStop Color="#649173" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="infoBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFA49C56" Offset="0.0" />
        <GradientStop Color="#FF3C5945" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="sideBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#DBD5A4" Offset="0.0" />
        <GradientStop Color="#DBD5A4" Offset="1.0" />
    </LinearGradientBrush>

    <Brush x:Key="buttonColor">#459660</Brush>
    <Brush x:Key="buttonTextColor">Black</Brush>
    <Brush x:Key="textColor">Black</Brush>
</ResourceDictionary>