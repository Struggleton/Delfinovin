<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="mainGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF3D6978" Offset="0.0" />
        <GradientStop Color="#FFA83E43" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="infoBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#1D4350" Offset="0.0" />
        <GradientStop Color="#A43931" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="sideBarGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#613E40" Offset="0.0" />
        <GradientStop Color="#613E40" Offset="1.0" />
    </LinearGradientBrush>

    <Brush x:Key="buttonColor">#60191D</Brush>
    <Brush x:Key="buttonTextColor">White</Brush>
    <Brush x:Key="textColor">White</Brush>
</ResourceDictionary>